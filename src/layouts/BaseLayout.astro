---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import CartDrawer from "../components/CartDrawer.svelte";
import AnnouncementBar from "../components/AnnouncementBar.astro";

export interface Props {
  title: string;
  description?: string;
}

const defaultDesc = "Shopify Headless Front-End UI for Meraki";

const { title, description = defaultDesc } = Astro.props as Props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/Ikarus-favicon.png" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Nothing+You+Could+Do&family=Anton&family=Nobile:ital,wght@0,400;0,500;0,700;1,400;1,500;1,700&display=swap"
      rel="stylesheet"
    />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
    <style is:global>
      @import "../styles/global.css";
    </style>
  </head>
  <body class="nobile-regular">
    <AnnouncementBar />
    <CartDrawer client:idle />
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
